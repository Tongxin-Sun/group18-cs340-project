<div id="browse">
<p><a href="#" onClick="showAll()">Display all forms</a> </p>
<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Edit</th>
            <th>Delete</th>
            {{#each posts.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td><a href="#" onClick="updateItem('this.PostID')">Edit</a></td>
            <td><a href="#" onclick="deleteItem('this.PostID')">Delete</a></td>
            <td>{{this.[Post ID]}}</td>
            <td>{{this.[Content]}}</td>
            <td>{{this.[Access]}}</td>
            <td>{{this.[User Name]}}</td>
            <td>{{this.[Friends Mentioned]}}</td>
            <td>{{this.[Locations Pinned]}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<p>&nbsp;</p>
</div> <!-- browse -->
<div id="insert">
    <form method="POST" id="addPost">
        <legend><strong>Add A Post</strong></legend>
          <fieldset class="fields">
            <div>
              <label> User Name </label> 
              <select name="user" onchange="renderFriends(this.value)">
            	<option value="" selected>--Please select--</option>
              {{#each users}}
                <option value="{{this.user_id}}">{{this.user_name}}</option>
              {{/each}}
              </select>
            </div>
            <div>
              <label> Friends Name </label> 
              <select name="friendList" id="friendList" multiple>
            	<option value="" selected>--Please select--</option>
              </select>
            </div>
            <div>
              <label>Content</label> 
              <textarea name="content"></textarea>
            </div>
            <div>
              <label>Access</label>
              <select name="access">
                <option value="" selected>--Please select--</option>
                <option value="Public">Public</option>
                <option value="Public to friends">Public to friends</option>
                <option value="Private">Private</option>
              </select>
            </div>
            <div>
            <label> Location </label> 
              <select name="location">
            	  <option value="" selected>--Please select--</option>
                <option value="1">57434 Paucek Meadow, Suite 978 Efrainchester Missouri 99566-5220 United States</option>
                <option value="2">9088 Shanahan Groves, Suite 697 Pfannerstillhaven Wisconsin 97929 United States</option>
              </select>
            </div>
      </fieldset>
          <input class="btn" type="submit" id="addPost" value="Add Post">
          <input class="btn" type="button" value="cancel" onClick="browsePosts()">
	</form> 
</div><!-- insert -->
