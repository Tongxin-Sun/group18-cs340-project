            <label> User 1 Name </label> <select name="user" id="username1" onChange="renderOtherUsers(this.value)" required>
              <option value="">--Please select--</option>
              {{#each users}}
                <option value="{{this.user_id}}">{{this.user_name}}</option>
              {{/each}}
                </select>
            <label> User 2 Name </label> <select name="friend" id="username2" >
                </select>
      </fieldset>
          <input class="btn" type="submit" id="addFriendship" value="Add Friendship">
